{% extends 'adminbase.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);
        }
    </script>
    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">


                    <a href="{{ path('admin_comment_new') }}" class="btn btn-outline-primary">Create New Comment</a>
                    <br><br>

                    <h1>Comment index</h1>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Subject</th>
                            <th>Comment</th>
                            <th>Status</th>
                            <th>Ip</th>
                            <th>Userid</th>
                            <th>Content</th>
                            <th>Created_at</th>
{#                            <th>Updated_at</th>#}
                            <th>Rate</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.subject }}</td>
                                <td>{{ comment.comment }}</td>
                                <td>{{ comment.status }}</td>
                                <td>{{ comment.ip }}</td>
{#                                <td>{{ comment.userid }}</td>#}
                                <td><a href="{{ path('admin_user_show',{'id': comment.id }) }}">{{ comment.name }} {{ comment.surname }}</a></td>
                                <td><a href="{{ path('admin_content_show',{'id': comment.id }) }}">{{ comment.title }}</a></td>
                                <td>{{ comment.created_at }}</td>
{#                                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
                                <td>{{ comment.rate }}</td>
                                <td>
                                    <a href="{{ path('admin_comment_show', {'id': comment.id}) }}" class="btn btn-primary">show</a>
                                </td>
                                <td> <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-success">edit</a></td>
                                <td>
                                    {{ include('admin/comment/_delete_form.html.twig') }}
                                </td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

