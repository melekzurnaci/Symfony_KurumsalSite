{% extends 'adminbase.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Content Listesi </h2>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ content.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ content.title }}</td>
                    </tr>
                    <tr>
                        <th>Keywords</th>
                        <td>{{ content.keywords }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ content.description }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>{{ content.image }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ content.type }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ content.status }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <br>
                <div class="col-md-2">
                    <a href="{{ path('admin_content_index') }}" class="btn btn-primary btn-block">Back to List</a>
                </div>
                <br>
                <div class="col-md-2">
                    <a href="{{ path('admin_content_edit', {'id': content.id}) }}" class="btn btn-success">Edit</a>
                </div>
                <br>
                {{ include('admin/content/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
