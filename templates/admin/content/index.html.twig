{% extends 'adminbase.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}

    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);
        }
    </script>
    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Category Listesi </h2>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <table  class="table table-hover">

                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Keywords</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Type</th>
                                <th>Gallery</th>
                                <th>Status</th>
{#                                <th>Created_at</th>#}
{#                                <th>Updated_at</th>#}
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for content in contents %}
                                <tr>
                                    <td>{{ content.category }} {{ content.id }}</td>
                                    <td>{{ content.title }}</td>
                                    <td>{{ content.keywords }}</td>
                                    <td>{{ content.description }}</td>
                                    <td><img src="{{ asset('uploads/images/'~ content.image) }}" height="40"></td>
                                    <td>{{ content.type }}</td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_image_new',{'id':content.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                            <img src="{{ asset('assets/admin/assets/img') }}/gallery.png" height="40">
                                        </a>
                                    </td>
                                    <td>{{ content.status }}</td>
{#                                    <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>#}
{#                                    <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
                                    <td>
                                        <a href="{{ path('admin_content_show', {'id': content.id}) }}"  class="btn btn-primary" >show</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_content_edit', {'id': content.id}) }}" class="btn btn-success">edit</a>
                                    </td>

                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('admin_content_new') }}">Create new</a>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
    </div>
{% endblock %}
