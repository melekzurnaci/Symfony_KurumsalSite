{% extends 'homebase.html.twig' %}

{% block title %}Duyurular | {{setting[0].title}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}
{% block description %}{{setting[0].description}}{% endblock %}

{% block body %}
    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);
        }
    </script>
    <div class="news">
        <div class="home" style=" height: 55px"></div>
        <div class="container">
            <div class="row">

                <div class="col-lg news_col">
                    {% for rs in duyurular %}
                    <div class="news_post">

                            <div class="news_content">
                                <div class="news_title">{{ rs.title }}</div>
                              <div class="ne"></div>
                            </div>
                            <div class="news_button"><a href="{{ path('content_show',{'id': rs.id}) }}">read more</a></div>

                    </div>
                        <br><br>
                    {% endfor %}
                </div>


            </div>
        </div>
    </div>
{% endblock %}
