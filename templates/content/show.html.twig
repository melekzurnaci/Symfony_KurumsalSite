{% extends 'homebase.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br><br><br><br>
    <script language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures) { window.open( windowURL, windowName, windowFeatures);
        }
    </script>
    {{ include ('user/usermenu.html.twig') }}
    <div class="container">
        <div>
            <div class="col">
                <div class="section_title_container text-center">
                    <div class="section_subtitle"></div>
                    <div class="section_title">My Comment List</div>
                </div>
            </div>
        </div>

        <div class="row news_row">
            <div class="news_item">
                <div class="news_content">
                    <div class="news_title" style="text-align: center"></div>
                    <div class="news_text">

                        <h1>Content</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ content.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ content.title }}</td>
                            </tr>
                            <tr>
                                <th>Keywords</th>
                                <td>{{ content.keywords }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ content.description }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ content.image }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ content.type }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ content.status }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated_at</th>
                                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <br>
                        <div class="col-md-2">
                            <a href="{{ path('user_content_index') }}" class="btn btn-primary btn-block">Back to List</a>
                        </div>
                        <br>
                        <div class="col-md-2">
                            <a href="{{ path('user_content_edit', {'id': content.id}) }}" class="btn btn-success">Edit</a>
                        </div>
                        <br>
                        {{ include('content/_delete_form.html.twig') }}

                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
        </div>
    </div>
{% endblock %}
